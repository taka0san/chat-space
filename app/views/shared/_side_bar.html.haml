.side
  .side__top
    .side__top__box
      %h3.side__top__box__name 
        = current_user.name
      %ul.side__top__box__icon
        %li.side__top__box__icon__edit
          = link_to new_group_path do
            %i.fas.fa-edit
        %li.side__top__box__icon__cog
          = link_to edit_user_path(current_user) do
            %i.fas.fa-cog
  .side__bottom
    - current_user.groups.each do |group|
      .side__bottom__group
        = link_to group_messages_path(group) do
          .side__bottom__group__name
            = group.name
          .side__bottom__group__message
            = group.show_last_message